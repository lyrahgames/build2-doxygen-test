file{Doxyfile}: in{Doxyfile}
{
  in.symbol = '|'
  input_src = "$src_root/$project"
  input_out = "$out_root/$project"
}

import! doxygen = doxygen%exe{doxygen}

./: dir{html}: file{Doxyfile} $doxygen
{{
  diag doxygen ($<[0])
  $doxygen $path($<) 1>-
}}
% clean
{{
  diag Remove documentation generated by Doxygen.
  rm -rf $out_base/html
}}
